{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/*.php",
      "server/**"
    ],
    "rewrites": [
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "/login",
        "destination": "/login.html"
      },
      {
        "source": "/dashboard/**",
        "destination": "/beachTriviaPages/dashboards/host-dashboard.html"
      }
    ],
    "trailingSlash": false
  }
}