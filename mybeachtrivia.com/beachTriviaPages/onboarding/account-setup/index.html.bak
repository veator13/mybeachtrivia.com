<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Account Setup</title>
  <link rel="stylesheet" href="/login.css">
  <style>
    .card { max-width: 720px; margin: 32px auto; padding: 20px; border:1px solid #ddd; border-radius:10px; background:#fff; }
    .row { display:grid; grid-template-columns: 1fr 1fr; gap:12px; }
    label { display:block; font-weight:600; margin:8px 0 4px; }
    input, button, select { width:100%; padding:10px; }
    .muted { color: #666; font-size: 0.9rem; }
    .ok { color: #0a7f27; }
    .err { color: #b00020; }
    [hidden] { display:none !important; }
  </style>
</head>
<body>
  <div class="card" id="setupCard" hidden>
    <h2>Welcome â€” finish setting up your account</h2>
    <p class="muted">If you just created a password, sign in below to continue.</p>

    <!-- Step A: sign in (only shown if not authed) -->
    <div id="step-auth">
      <form id="loginForm">
        <label>Email</label>
        <input id="loginEmail" type="email" autocomplete="username" required />
        <label>Password</label>
        <input id="loginPass" type="password" autocomplete="current-password" required />
        <button id="loginBtn" type="submit">Sign in</button>
        <div id="authMsg" class="err" hidden></div>
      </form>
    </div>

    <!-- Step B: profile info (shown when authed) -->
    <div id="step-form" hidden>
      <p class="muted">Signed in as <span id="who"></span></p>

      <form id="profileForm">
        <div class="row">
          <div>
            <label>First name</label>
            <input id="firstName" />
          </div>
          <div>
            <label>Last name</label>
            <input id="lastName" />
          </div>
        </div>

        <div class="row">
          <div>
            <label>Nickname / Display</label>
            <input id="nickname" />
          </div>
          <div>
            <label>Date of birth</label>
            <input id="dob" type="date" />
          </div>
        </div>

        <div class="row">
          <div>
            <label>Phone</label>
            <input id="phone" placeholder="555-555-5555" />
          </div>
          <div>
            <label>Emergency contact phone</label>
            <input id="emergencyContactPhone" placeholder="555-555-5555" />
          </div>
        </div>

        <label>Emergency contact name</label>
        <input id="emergencyContact" />

        <div style="margin-top:16px; display:flex; gap:12px;">
          <button id="saveBtn" type="submit">Save my info</button>
          <span id="saveMsg" class="ok" hidden>Saved!</span>
          <span id="saveErr" class="err" hidden></span>
        </div>
      </form>
    </div>
  </div>

  <script src="https://www.gstatic.com/firebasejs/9.21.0/firebase-app-compat.js"></script>
<script src="https://www.gstatic.com/firebasejs/9.21.0/firebase-auth-compat.js"></script>
<script src="https://www.gstatic.com/firebasejs/9.21.0/firebase-firestore-compat.js"></script>
<script src="/firebase-init.js"></script>
  <script src="./script.js?v=5"></script>
</body>
</html>
